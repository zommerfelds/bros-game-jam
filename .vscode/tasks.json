{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "npm: install",
			"type": "npm",
			"script": "install",
		},
		{
			"label": "kill webpack",
			"type": "shell",
			"windows": {
				"command": "echo 'Skipping pkill (windows)'"
			},
			"command": "pkill webpack || true"
		},
		{
			"label": "run dev server",
			"type": "npm",
			"script": "start",
			"problemMatcher": [],
			"runOptions": {
				"runOn": "folderOpen",
				"instanceLimit": 1
			},
			"dependsOrder": "sequence",
			"dependsOn": [
				"npm: install",
				"kill webpack"
			]
		}
	]
}